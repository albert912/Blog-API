// tsconfig.json
{
  "compilerOptions": {
    "target": "es2021",          // Or "es2019", "es2020"
    "module": "commonjs",         // THIS IS CRUCIAL
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,      // THIS IS ALSO CRUCIAL
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}